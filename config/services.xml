<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="http_client" class="GuzzleHttp\Client">
            <argument type="collection">
                <argument key="base_uri">%gitlab.host%</argument>
                <argument key="headers" type="collection">
                    <argument key="PRIVATE-TOKEN">%gitlab.token%</argument>
                </argument>
            </argument>
        </service>
        <service id="gitlab_client" class="Pitchart\GitlabHelper\Service\GitlabClient">
            <argument type="service" id="http_client" />
            <argument>%gitlab.token%</argument>
            <argument>%gitlab.api_version%</argument>
        </service>
    </services>
</container>